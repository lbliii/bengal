{#-
CLI Individual Command Template

Template for individual CLI command documentation.
Extends base template and includes comprehensive command details.
-#}

{% extends "base/cli_base.md.jinja2" %}

{% from 'macros/safe_macros.md.jinja2' import safe_section %}

{% block content %}
{#- Command description -#}
{% call safe_section("description") %}
  {% include 'cli/partials/command_description.md.jinja2' %}
{% endcall %}

{#- Usage information -#}
{% call safe_section("usage") %}
  {% include 'cli/partials/command_usage.md.jinja2' %}
{% endcall %}

{#- Command arguments -#}
{% call safe_section("arguments") %}
  {% include 'cli/partials/command_arguments.md.jinja2' %}
{% endcall %}

{#- Command options -#}
{% call safe_section("options") %}
  {% include 'cli/partials/command_options.md.jinja2' %}
{% endcall %}

{#- Command examples -#}
{% call safe_section("examples") %}
  {% include 'cli/partials/command_examples.md.jinja2' %}
{% endcall %}

{#- Subcommands (if any) -#}
{% call safe_section("subcommands") %}
  {% include 'cli/partials/subcommands_list.md.jinja2' %}
{% endcall %}
{% endblock %}
