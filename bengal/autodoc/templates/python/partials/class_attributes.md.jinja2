{#-
Class Attributes Component

Renders class attributes as a definition list.
Definition lists handle long descriptions gracefully.
-#}

{% from 'macros/safe_macros.md.jinja2' import safe_section %}

{% set attributes = item.children | selectattr('element_type', 'equalto', 'attribute') | list %}

{% if attributes %}
<div class="api-attributes">
    <h4 class="api-subsection-title">Attributes</h4>
    <table class="api-table api-table--compact">
      <thead>
        <tr>
          <th>Name</th>
          <th>Type</th>
          <th>Description</th>
        </tr>
      </thead>
      <tbody>
        {% for attr in attributes %}
        <tr>
          <td><code>{{ attr.name }}</code></td>
          <td>{% if attr.metadata.type_annotation %}<code>{{ attr.metadata.type_annotation }}</code>{% else %}â€”{% endif %}</td>
          <td>{{ attr.description | default('*No description provided.*') | trim }}</td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
</div>
{% endif %}
