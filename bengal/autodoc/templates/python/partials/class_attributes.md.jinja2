{#-
Class Attributes Component

Renders class attributes in a safe table format.
Uses the shared parameter table macro for consistency.
-#}

{% from 'macros/safe_macros.md.jinja2' import safe_section %}
{% from 'macros/parameter_table.md.jinja2' import parameter_table %}

{% set attributes = item.children | selectattr('element_type', 'equalto', 'attribute') | list %}

{% if attributes %}
{% call safe_section("class_attributes") %}
{{ parameter_table(attributes, "Attributes", show_types=true, show_defaults=false) }}
{% endcall %}
{% endif %}
